@model Yonazone.ViewModels.ProductDetailViewModel

@{
    ViewData["Title"] = "Product Details";
}

<br/>
<h2>@Html.DisplayFor(model => model.Product.Name)</h2>

<div class="row">
    <div class="col-md-4">@Html.DisplayFor(model => model.Product.Description)</div>
    <div class="col-md-4">@Html.DisplayFor(model => model.Product.Price)</div>
    <div class="col-md-4"><a asp-area="" asp-controller="Orders" asp-action="Create" asp-route-id="@Model.Product.ProductId">Purchase</a></div>
</div>

<div>
    Seller: @Html.DisplayFor(model => model.Product.User.FirstName) @Html.DisplayFor(model => model.Product.User.LastName)
</div>

<div>
    &lt;&lt; <a asp-action="ProductTypeDetail" asp-route-id="@Model.Product.ProductTypeId">Back to List</a>
</div>
